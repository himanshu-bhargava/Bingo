<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:backgroundTintMode="add"
    android:fadingEdge="horizontal|vertical"
    android:hapticFeedbackEnabled="false"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/roomIdToShareTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/rectangle_button"
        android:clickable="false"
        android:onClick="shareRoomId"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@id/bingoGrid"
        app:layout_constraintStart_toStartOf="@id/bingoGrid"
        app:layout_constraintTop_toTopOf="@id/bingoGrid" />

    <LinearLayout
        android:id="@+id/playersNameGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:foregroundGravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/gridSelectMessage"
        android:layout_width="390dp"
        android:layout_height="93dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="10dp"
        android:lines="4"
        android:singleLine="false"
        android:text="Please select type of \n grid for Bingo"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="35sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="@id/bingoGrid"
        app:layout_constraintStart_toStartOf="@id/bingoGrid"
        app:layout_constraintTop_toBottomOf="@+id/bingoGrid" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fireWorksLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:onClick="closeActivity"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/fireworks"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:foregroundGravity="fill_horizontal|center_horizontal|fill"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/winnerAnnounce"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="510dp"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_horizontal|center_vertical"
            android:shadowColor="#DD6161"
            android:text="saurav"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="#FAFAFA"
            android:textColorHighlight="#DCC573"
            android:textSize="35sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/fireworks" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:foregroundGravity="center_horizontal"
            android:gravity="center_horizontal"
            android:shadowColor="#DD6161"
            android:text="Tap anywhere to go back"
            android:textAlignment="gravity"
            android:textAllCaps="false"
            android:textColor="#FAFAFA"
            android:textColorHighlight="#EF5B5B"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/winnerAnnounce" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/bingoGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playersNameGrid">

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circle_button"
            android:clickable="false"
            android:enabled="true"
            android:tag="1"
            android:text="B"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:background="@drawable/circle_button"
            android:clickable="false"
            android:enabled="true"
            android:tag="2"
            android:text="I"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:background="@drawable/circle_button"
            android:clickable="false"
            android:enabled="true"
            android:tag="3"
            android:text="N"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="2" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:background="@drawable/circle_button"
            android:clickable="false"
            android:enabled="true"
            android:tag="4"
            android:text="G"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="3" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="1dp"
            android:background="@drawable/circle_button"
            android:clickable="false"
            android:enabled="true"
            android:tag="5"
            android:text="O"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="4" />

    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gameGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:foregroundGravity="center"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bingoGrid">

        <Button
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="0,0"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="0,1"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="0,2"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="0,3"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_row="0" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="0,4"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="4"
            app:layout_row="0" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="1,0"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="1" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="1,1"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="1" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="1,2"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="1" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="1,3"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_row="1" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="1,4"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="4"
            app:layout_row="1" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="2,0"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="2" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="2,1"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="2" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="2,2"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="2" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="2,3"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_row="2" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="2,4"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="4"
            app:layout_row="2" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="3,0"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="3" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="3,1"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="3" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="3,2"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="3" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="3,3"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_row="3" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="3,4"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="4"
            app:layout_row="3" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="4,0"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="0"
            app:layout_row="4" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="4,1"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="1"
            app:layout_row="4" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="4,2"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="2"
            app:layout_row="4" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="4,3"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="3"
            app:layout_row="4" />

        <Button
            android:layout_width="65dp"

            android:layout_height="65dp"
            android:layout_margin="1dp"
            android:background="@drawable/bingo_grid_button"
            android:onClick="onGameGridButtonClick"
            android:tag="4,4"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_column="4"
            app:layout_row="4" />

    </androidx.gridlayout.widget.GridLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gameGrid">

        <Button
            android:id="@+id/customFill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/rectangle_button"
            android:onClick="userInitialize"
            android:text="Custom"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_column="2"
            app:layout_row="0" />

        <Button
            android:id="@+id/randomFill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/rectangle_button"
            android:onClick="randomInitialize"
            android:text="Random"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_column="0"
            app:layout_row="0" />

        <Button
            android:id="@+id/simpleFill"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/rectangle_button"
            android:onClick="regularInitialize"
            android:text="Simple"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="visible"
            app:layout_column="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/goGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/rectangle_button"
            android:enabled="true"
            android:foregroundGravity="center"
            android:onClick="startGame"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:text="Start Game"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="15sp"
            android:visibility="gone"
            app:layout_column="2" />

        <Button
            android:id="@+id/roomIdToShareBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_button"
            android:clickable="false"
            android:onClick="shareRoomId"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:visibility="gone" />

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
